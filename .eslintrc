{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "google",
    "plugin:react/recommended",
    "plugin:jest/recommended"
  ],
  "plugins": [
    "jest",
    "flowtype-errors"
  ],
  "rules": {
    "linebreak-style": 0,
    "object-curly-spacing": 0,
    "flowtype-errors/show-errors": 2,
    "flowtype-errors/show-warnings": 1
  },
  "settings": {
    "flowtype-errors": {
      "flowDir": "./src"
    }
  }
}